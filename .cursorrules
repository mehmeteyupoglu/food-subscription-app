// Import sıralaması
rule "Import sıralaması" {
  // React ve React Native importları en üstte
  imports {
    order = [
      "react",
      "react-native",
      "external",
      "internal"
    ]
    
    // @ ile başlayan importlar internal grubunda
    patterns {
      internal = ["@/**"]
    }
    
    // Gruplar arası boş satır
    newlines_between = "always"
    
    // Grup içi alfabetik sıralama
    alphabetize = true
  }
}

// Tema renkleri merkezi yönetim
rule "Tema renkleri" {
  // Renk tanımları colors.ts dosyasında olmalı
  color_definitions {
    source_file = "app/colors.ts"
    allow_direct_colors = false
  }
}

// Kod stil kuralları
rule "Kod stili" {
  // Tek tırnak kullanımı
  quotes = "single"
  
  // Son satırda yeni satır
  final_newline = true
  
  // Satır sonu boşlukları temizlenmeli
  trim_trailing_whitespace = true
  
  // Maximum satır uzunluğu
  max_line_length = 100
}

// TypeScript kuralları
rule "TypeScript" {
  // Type-only importları tercih et
  prefer_type_imports = true
  
  // Explicit return types
  explicit_function_return_type = true
}

// React Native Best Practices
rule "React Native Best Practices" {
  // Component isimlendirme
  naming {
    components = "PascalCase"
    hooks = "useCamelCase"
    utils = "camelCase"
    constants = "UPPER_SNAKE_CASE"
  }
  
  // Component yapısı
  component_structure {
    // Props interface componentin üstünde olmalı
    props_interface_location = "above"
    
    // Styles componentin altında olmalı
    styles_location = "below"
    
    // Hook kullanımları en üstte olmalı
    hooks_location = "top"
  }
  
  // Performance
  performance {
    // Gereksiz re-render'ları önle
    prevent_unnecessary_rerenders = true
    
    // Büyük listelerde FlatList kullan
    prefer_flatlist_for_lists = true
    
    // useCallback ve useMemo kullanımı
    memoization = "when_needed"
  }
  
  // Platform spesifik kod
  platform_specific {
    // Platform özel kodları ayır
    separate_platform_code = true
    
    // Platform özel dosya isimlendirmesi
    platform_file_naming = ".ios.tsx, .android.tsx"
  }
  
  // Responsive tasarım
  responsive_design {
    // Sabit boyutlar yerine relative kullan
    prefer_relative_units = true
    
    // Ekran boyutuna göre ölçeklendirme
    use_responsive_dimensions = true
  }
}

// Güvenlik kuralları
rule "Security" {
  // Hassas bilgileri env'de tut
  sensitive_data {
    store_in_env = true
    allowed_locations = ["env", "secrets"]
  }
  
  // API anahtarlarını gizle
  api_keys {
    expose_in_client = false
    require_encryption = true
  }
} 